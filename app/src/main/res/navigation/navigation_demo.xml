<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@+id/navigation_a">

    <fragment
        android:id="@+id/navigation_a"
        android:name="com.weishop.test.jetpack.navigation.fragment.FragmentA"
        tools:layout="@layout/fragment_a">

        <action
            android:id="@+id/action_a_to_b"
            app:destination="@id/navigation_b"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right">

            <argument
                android:name="from1"
                app:argType="string" />

            <argument
                android:name="from2"
                app:argType="integer" />
        </action>

        <action
            android:id="@+id/action_a_to_dialog"
            app:destination="@id/my_dialog_fragment" />


    </fragment>

    <fragment
        android:id="@+id/navigation_b"
        android:name="com.weishop.test.jetpack.navigation.fragment.FragmentB"
        tools:layout="@layout/fragment_b">

        <!--  这个action会跳转到c，popUpTo导致从c返回会直接返回到a，所以启动
         c的时候b就会销毁 -->
        <action
            android:id="@+id/action_b_to_c"
            app:destination="@id/navigation_c"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/action_b_to_activity"
            app:destination="@id/sampleActivityDestination"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/action_b_to_outer_activity"
            app:destination="@id/sampleActivityDestinationOuter"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />


        <!--接收来自fragmenta传递的参数        -->
        <argument
            android:name="from1"
            app:argType="string" />

        <argument
            android:name="from2"
            app:argType="integer" />

        <argument
            android:name="data"
            android:defaultValue="test"
            app:argType="string"
            app:nullable="true" />

    </fragment>

    <fragment
        android:id="@+id/navigation_c"
        android:name="com.weishop.test.jetpack.navigation.fragment.FragmentC"
        tools:layout="@layout/fragment_c">

        <action
            android:id="@+id/action_c_to_a"
            app:popUpTo="@id/navigation_a"
            app:popUpToInclusive="false" />

        <!--        <action-->
        <!--            android:id="@+id/action_c_to_a"-->
        <!--            app:destination="@id/navigation_a"-->
        <!--            app:enterAnim="@anim/slide_in_right"-->
        <!--            app:exitAnim="@anim/slide_out_left"-->
        <!--            app:popEnterAnim="@anim/slide_in_left"-->
        <!--            app:popExitAnim="@anim/slide_out_right" />-->


        <action
            android:id="@+id/action_c_to_dialog"
            app:destination="@id/my_dialog_fragment" />

    </fragment>

    <!--    <activity-->
    <!--        android:id="@+id/sampleActivityDestination"-->
    <!--        android:name="com.weishop.test.jetpack.navigation.DestinationActivity" />-->

    <!--    全局action-->
    <action
        android:id="@+id/action_global_fragment_a"
        app:destination="@+id/navigation_a" />

    <activity
        android:id="@+id/sampleActivityDestination"
        app:action="android.intent.action.VIEW"
        app:data="https://example.com"
        app:targetPackage="${applicationId}" />

    <activity
        android:id="@+id/sampleActivityDestinationOuter"
        app:action="android.intent.action.VIEW"
        app:dataPattern="https://example.com?navigationId={navigationId}"
        app:targetPackage="com.kttest">

        <argument
            android:name="navigationId"
            app:argType="integer" />

    </activity>

    <dialog
        android:id="@+id/my_dialog_fragment"
        android:name="com.weishop.test.jetpack.navigation.MyDialogFragment">
        <action
            android:id="@+id/dialog_to_a"
            app:destination="@id/navigation_a" />
    </dialog>

</navigation>